html    
    head 
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        script(src="https://kit.fontawesome.com/f510059673.js" crossorigin="anonymous")  
        link(rel="stylesheet" type="text/css" href="/css/genre.css")
        title genre page
    body 
        include header.pug
        div(class="container")
            div(class="card")
                div(class="card-image")
                    img(src="/resources/movies2.jpg", alt="")
                div(class="profile-image")
                    img(src="/resources/movieReview.jpeg" alt="")
                div(class="card-content")
                    h2 Results for "#{genre}" Genre 
                div(class="middle")
                    div(class="menu")
                        li(class="item" id="following")
                            a(href="#following" class="btn")
                                i(class="fas fa-film")
                                |MOVIES 
                            div(class="smenu")
                                 each movie in movies
                                    a(href=`/movies/${movie.id}`) #{movie.Title}             
                        
















